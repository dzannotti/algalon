# Algalon Homelab Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# USER & TIMEZONE
# ============================================================================
# Get your PUID and PGID by running: id $USER
PUID=1000
PGID=1000
TZ=Europe/London

# ============================================================================
# EXPRESSVPN CONFIGURATION
# ============================================================================
EXPRESSVPN_USER=your_expressvpn_username
EXPRESSVPN_PASSWORD=your_expressvpn_password
EXPRESSVPN_REGION=USA - Los Angeles
# Port forwarding (if ExpressVPN supports it, otherwise leave as random port)
FIREWALL_VPN_INPUT_PORTS=6881

# ============================================================================
# PI-HOLE
# ============================================================================
PIHOLE_PASSWORD=your_secure_password_here

# ============================================================================
# SAMBA NAS
# ============================================================================
SAMBA_USER=admin
SAMBA_PASSWORD=your_secure_samba_password
