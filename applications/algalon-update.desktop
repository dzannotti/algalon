[Desktop Entry]
Version=1.0
Type=Application
Name=Update Algalon
Comment=Pull latest changes and update Algalon configuration
Icon=gnome-robots
Exec=ghostty --window-width=80 --window-height=40 --title="Algalon Update" -e bash -c 'export PATH="$HOME/.local/share/algalon/bin:$PATH"; algalon-show-logo; algalon-update; algalon-show-done'
Terminal=false
Categories=System;Settings;
Keywords=update;algalon;config;
